<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyButtonStyle" parent="">
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@color/btn_color</item>
    </style>

    <style name="MyTextInputLayoutStyle" parent="">
        <item name="hintEnabled">false</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
    </style>

    <style name="MyGreetingTextStyle" parent="">
        <item name="android:text">@string/greeting</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="MyNameTextStyle" parent="">
        <item name="android:text">@string/name</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_17ssp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="MySelectedUserTextStyle" parent="">
        <item name="android:text">@string/selected_user</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_22ssp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="MyThirdScreenHeaderStyle" parent="">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_22sdp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:text">@string/third_screen</item>
    </style>
</resources>